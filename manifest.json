{
  "name": "50X auto refresh",
  "description": "refresh on 50X http status code",
  "version": "0.7",
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "icons": {
    "16": "icon_on.png",
    "32": "icon_on.png",
    "48": "icon_on.png",
    "128": "icon_on.png"
  },
  "browser_action": {
    "default_icon": "icon_off.png",
    "default_title": "50X auto refresh"
  },
  "manifest_version": 2
}

